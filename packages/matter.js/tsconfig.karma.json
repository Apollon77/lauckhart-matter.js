/* Karma unit tests configuration */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs", // Required for Karma web test
    "esModuleInterop": true,

    "types": [
      "mocha"
    ]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  
  "typeRoots": [
    "./node_modules/@types",
    "./test/support"
  ]
}
