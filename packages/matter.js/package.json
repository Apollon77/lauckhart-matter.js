{
  "name": "@project-chip/matter.js",
  "version": "0.5.0",
  "description": "Matter protocol in pure js",
  "keywords": [
    "iot",
    "home automation",
    "matter",
    "smart device"
  ],
  "license": "Apache-2.0",
  "author": "Project CHIP Authors",
  "contributors": [
    "Martin Turon <mturon@google.com>",
    "Marco Fucci di Napoli <mfucci@gmail.com>",
    "Ingo Fischer <github@fischer-ka.de>"
  ],
  "bugs": {
    "url": "https://github.com/project-chip/matter.js/issues"
  },
  "homepage": "https://github.com/project-chip/matter.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/project-chip/matter.js.git"
  },
  "scripts": {
    "clean": "rm -rf dist build out *.tsbuildinfo",
    "build-types": "tsc && mkdir -p dist/es dist/cjs && cp -a build/types/src/* dist/es && cp -a build/types/src/* dist/cjs",
    "build-esm": "swc src -s -d build/esm/src -C module.type=es6 -C jsc.target=es2017",
    "build-cjs": "swc src -s -d build/cjs/src -C module.type=commonjs -C jsc.target=es2017",
    "build-test-esm": "swc test -s -d build/esm/test -C module.type=es6 -C jsc.target=es2017",
    "build-test-cjs": "swc test -s -d build/cjs/test -C module.type=commonjs -C jsc.target=es2017 && cp package-cjs.json build/cjs/package.json",
    "build-test-web": "rollup -c test/rollup.config.js",
    "build-dist-esm": "mkdir -p dist/es && cp -a build/types/src/* build/esm/src/* dist/es",
    "build-dist-cjs": "mkdir -p dist/cjs && cp -a build/types/src/* build/cjs/src/* dist/cjs && cp package-cjs.json dist/cjs/package.json",
    "build-dist": "npm run build-dist-esm && npm run build-dist-cjs",
    "build": "npm run build-types && npm run build-cjs && npm run build-esm && npm run build-dist && npm run build-test-cjs && npm run build-test-esm",
    "build-clean": "npm run clean && npm run build",
    "build-doc": "typedoc --excludeExternals --plugin typedoc-plugin-missing-exports --plugin typedoc-plugin-markdown --gitRemote upstream --tsconfig tsconfig.dist-cjs.json",
    "test-node-cjs": "mocha --config test/mocharc.cjs.cjs",
    "test-node-esm": "mocha --config test/mocharc.esm.cjs",
    "test-node": "npm run test-node-cjs && npm run test-node-esm",
    "test-web": "karma start test/karma.conf.cjs",
    "test-dev": "c8 mocha",
    "test": "npm run test-node && npm run test-web"
  },
  "dependencies": {
    "bn.js": "^5.2.1",
    "elliptic": "^6.5.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-virtual": "^3.0.1",
    "@swc/cli": "^0.1.62",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/elliptic": "^6.4.14",
    "@types/expect": "^24.3.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@web/dev-server-rollup": "^0.5.2",
    "c8": "^8.0.1",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "rollup": "^3.28.1",
    "typescript": "^4.9.5"
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "main": "dist/cjs/export.js",
  "module": "dist/es/export.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/export.d.ts",
        "default": "./dist/es/export.js"
      },
      "require": {
        "types": "./dist/cjs/export.d.ts",
        "default": "./dist/cjs/export.js"
      }
    },
    "./package.json": "./package.json",
    "./interaction": {
      "import": {
        "types": "./dist/es/protocol/interaction/export.d.ts",
        "default": "./dist/es/protocol/interaction/export.js"
      },
      "require": {
        "types": "./dist/cjs/protocol/interaction/export.d.ts",
        "default": "./dist/cjs/protocol/interaction/export.js"
      }
    },
    "./model": {
      "import": {
        "types": "./dist/es/model/index.d.ts",
        "default": "./dist/es/model/index.js"
      },
      "require": {
        "types": "./dist/cjs/model/index.d.ts",
        "default": "./dist/cjs/model/index.js"
      }
    },
    "./securechannel": {
      "import": {
        "types": "./dist/es/protocol/securechannel/export.d.ts",
        "default": "./dist/es/protocol/securechannel/export.js"
      },
      "require": {
        "types": "./dist/cjs/protocol/securechannel/export.d.ts",
        "default": "./dist/cjs/protocol/securechannel/export.js"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/es/*/export.d.ts",
        "default": "./dist/es/*/export.js"
      },
      "require": {
        "types": "./dist/cjs/*/export.d.ts",
        "default": "./dist/cjs/*/export.js"
      }
    }
  },
  "types": "dist/types",
  "typesVersions": {
    "*": {
      "interaction": [
        "/dist/cjs/protocol/interaction/export.d.ts"
      ],
      "model": [
        "/dist/cjs/model/index.d.ts"
      ],
      "securechannel": [
        "/dist/cjs/protocol/securechannel/export.d.ts"
      ],
      ".": [
        "/dist/cjs/export.d.ts"
      ],
      "*": [
        "/dist/cjs/*/export.d.ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
