/* Base configuration */
{
  "compilerOptions": {
    "target": "ES2015",
    "module": "node16",
    "moduleResolution": "node16", // Required to support exports on package.json
    "strictNullChecks": true, // Required to correctly generate Nullable types in d.ts
    "incremental": true, // Speed up subsequent builds
