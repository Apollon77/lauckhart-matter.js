/* Dev configuration */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true, // Required to remove warnings on jest test
    "composite": true,  // For linking this package from other packages
    "incremental": true, // Speed up subsequent builds
    "outDir": "dist/ignored", // We don't actually use this but vs code complains about sjcl.d.ts without it

    // Local dev compilation checks
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,
  },

  "files": [
    "out/sjcl/sjcl.js",
    "out/sjcl/sjcl.d.ts"
  ],

  /* During dev, test are included, so they are also modified during refactorings. */
  "include": ["src/**/*.ts", "test/**/*.ts" ]
}
