{
    "name": "@project-chip/matter-crypto.js",
    "version": "0.3.0",
    "description": "Encryption implementation for @project-chip/matter.js",
    "keywords": [
        "matter",
        "encryption",
        "crypto"
    ],
    "license": "Apache-2.0",
    "author": "Project CHIP Authors",
    "contributors": [
        "Martin Turon <mturon@google.com>",
        "Marco Fucci di Napoli <mfucci@gmail.com>",
        "Ingo Fischer <github@fischer-ka.de>"
    ],
    "bugs": {
        "url": "https://github.com/project-chip/matter.js/issues"
    },
    "homepage": "https://github.com/project-chip/matter.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/project-chip/matter.js.git"
    },
    "scripts": {
        "clean": "rm -rf dist && rm -f *.tsbuildinfo && rm -rf out/sjcl",
        "build": "npm run build-sjcl && npm run build-es && npm run build-cjs",
        "build-sjcl": "./build-sjcl.sh",
        "build-es": "tsc -b tsconfig.dist-es.json",
        "build-cjs": "tsc -b tsconfig.dist-cjs.json && cp ../matter.js/package-cjs.json dist/cjs/package.json",
        "build-clean": "npm run clean && npm run build",
        "test": "npm run test-node && npm run test-web",
        "test-node": "TZ=utc NODE_OPTIONS=--experimental-vm-modules jest",
        "test-web": "TZ=utc karma start test/karma.conf.cjs"
        },
    "devDependencies": {
        "@types/bn.js": "^5.1.1",
        "@types/elliptic": "^6.4.14",
        "@types/jest": "^29.5.1",
        "jest": "^29.5.0",
        "karma": "^6.4.1",
        "karma-chrome-launcher": "^3.1.1",
        "karma-coverage": "^2.2.0",
        "karma-jasmine": "^5.1.0",
        "karma-typescript": "^5.5.3",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@project-chip/matter.js": "^0.3.0",
        "bn.js": "^5.2.1",
        "elliptic": "^6.5.4"
        },
    "engines": {
        "_comment": "For web crypto support",
        "node": ">=14.0.0"
    },
    "files": [
        "dist/**/*",
        "LICENSE",
        "README.md"
    ],
    "type": "module",
    "main": "dist/cjs/index.js",
    "module": "dist/es/index.js",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/es/index.d.ts",
                "default": "./dist/es/index.js"
            },
            "require": {
                "types": "./dist/cjs/index.d.ts",
                "default": "./dist/cjs/index.js"
            }
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
