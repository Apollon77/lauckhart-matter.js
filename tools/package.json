{
  "name": "@project-chip/matter.js-tools",
  "version": "0.1.0",
  "description": "Matter.js tooling",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf .cache build dist",
    "build": "esbuild src/building/*.ts src/running/* src/util/*.ts --outdir=dist/esm --format=esm --log-level=warning && node bin/build.js",
    "build-clean": "npm run build -- --clean",
    "test": "./bin/test.js"
  },
  "bin": {
    "build": "./bin/build.js",
    "matter-test": "./bin/test.js",
    "run": "./bin/run.js"
  },
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/project-chip/matter.js.git"
  },
  "author": "Project CHIP Authors",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/project-chip/matter.js/issues"
  },
  "homepage": "https://github.com/project-chip/matter.js#readme",
  "dependencies": {
    "@types/express": "^4.17.17",
    "ansi-colors": "^4.1.3",
    "c8": "^8.0.1",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "esbuild": "^0.19.2",
    "express": "^4.18.2",
    "glob": "^10.3.4",
    "mocha": "^10.2.0",
    "playwright": "^1.37.1",
    "typescript": "^5.2.2",
    "v8-profiler-next": "^1.9.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/yargs": "^17.0.24"
  }
}
