{
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node16",
    "target": "es2018",
    "module": "es2022",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "tsBuildInfoFile": "build/tsbuildinfo",
    "types": ["node"]
  },

  "include": [
    "src/**/*.ts"
  ]
}
