{
  "compilerOptions": {
    "target": "es2018",
    "module": "nodenext",
    "sourceMap": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,

    "paths": {
      "#util/*": [ "./tools/util/*" ],
      "#models/*": [ "./links/models/*" ],
      "#matter.js/*": [ "./links/matter.js/src/*" ]
    }
  },

  "ts-node": {
    "experimentalResolver": true
  },

  "include": [
    "**/*.ts"
  ]
}
