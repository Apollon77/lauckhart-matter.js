{
  "name": "@project-chip/matter.js-codegen",
  "version": "0.1.0",
  "description": "Matter.js tooling",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf .cache dist",
    "build": "tsc",
    "build-clean": "npm run clean && npm run build",
    "console": "node --loader ts-node/esm src/repl.ts",
    "generate-spec": "node --loader ts-node/esm src/generate-spec.ts",
    "generate-chip": "node --loader ts-node/esm src/generate-chip.ts",
    "generate-model": "node --loader ts-node/esm src/generate-model.ts",
    "generate-clusters": "node --loader ts-node/esm src/generate-clusters.ts",
    "dump-model-names": "node --loader ts-node/esm src/dump-model-names.ts",
    "generate": "npm run src/generate-model && npm run src/generate-clusters"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/project-chip/matter.js.git"
  },
  "author": "Project CHIP Authors",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/project-chip/matter.js/issues"
  },
  "homepage": "https://github.com/project-chip/matter.js#readme",
  "devDependencies": {
    "@project-chip/matter.js": "0.5.0",
    "@project-chip/matter.js-intermediate-models": "0.1.0",
    "@types/jsdom": "^21.1.1",
    "jsdom": "^22.1.0",
    "ts-node": "^10.9.1",
    "word-list": "^3.1.0",
    "typescript": "^4.9.5"
  },
  "imports": {
    "#util/*": "./src/util/*"
  }
}
